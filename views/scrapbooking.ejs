<section class="scrapbooking container">
    
    <h1>Scrapbooking</h1>
    
    <article class="scrapGrid">
        <img src="/assets/image/scrapbooking/cadre1.jpg">
        <img src="/assets/image/scrapbooking/hoogie.jpg">
        <img src="/assets/image/scrapbooking/cadre2.jpg">
        <img src="/assets/image/scrapbooking/jars.jpg">
        <img src="/assets/image/scrapbooking/avion_licorn.jpg">
        <img src="/assets/image/scrapbooking/noel_cart.jpg">
        <img src="/assets/image/scrapbooking/spider_wire.jpg">
        <img src="/assets/image/scrapbooking/noel.jpg">
        <img src="/assets/image/scrapbooking/octopi.jpg">
        
    </article>

</section>

<section class="scrapbooking container">

    
    <% for(let produit of produits) { 
        if(produit.statut === "free") {%>
        
       <article id="<%= produit.id %>" class="product">
           <img src="<%= produit.img %>" alt="<%= produit.nom %>" >
           <div>
               
                <h2><%= produit.nom %></h2>
                <p><%= produit.description %></p>
                <p><%= produit.prix %> €</p>
            
            </div>
        
        <% if((locals.user.role === "client") && (produit.idUserPanier != locals.user.id)) { %>
        
        <button class="js-addProduit-button" data-addProduct = "<%= produit.id %>" data-addClient="<%= locals.user.id %>">Ajouter au panier</button>
        
        <% } %>
    
    </article>
        <% }
    
    } %>
    
</section>

<% if(locals.user.role === "client") { %>

<section class="orderPrompt container">
    
    <h2>Commande</h2>
    
    <form>
        
        <label for="orderScrapbooking">Faite une commande personalisée!</label>
        <textarea name="orderScrapbooking" id="orderScrapbooking" placeholder="formulez votre souhait" class="customOrderArea"></textarea>
        
        <input type="submit" value="Envoyer" class="js-customOrder-button" data-userId="<%= locals.user.id %>">
        
    </form>
    
</section>

<% } %>

