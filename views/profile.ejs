<h2>Profile page : </h2>
<section>
    <article id="<%= locals.user.id %>">
        
        <p><%= locals.user.pseudo %></p>
        <p><%= locals.user.email %></p>
        <button class="js-editProfile-button" data-profile="<%= locals.user.id %>">Edit Profile</button>
        
    </article>
    

    <form method="post" action="/logout">
        <input type="submit" value="Deconnexion">
    </form>
    
    <form method="post" action="/deleteProfile/<%= locals.user.id %>">
        <input type="submit" value="Suprimer le compte">
    </form>

</section>

<section>
    <H3>Panier</H3>
    
    <% for(let produit of produits) { 
        if(produit.statut === "free") { %>
        <article id="<%= produit.id %>">
        <p><%= produit.nom %></p>
        <p><%= produit.prix %></p>
        <p><button class="js-removeProduitPanier-button" data-produit="<%= produit.id %>">X</button> </p>
    </article>
        <% }
    } %>
    
    <p>Prix total : <%= prixPanier %> </p>
    
    <% if(prixPanier) { %>
    
        <form method="post" action="/buy/<%= locals.user.id %>">
            <input type="submit" value="Acheter">
        </form>
    
    <% } %>
    
</section>

<section>
    <h3>Mes commandes</h3>
    
    <% for(let commande of commandes) { %>
    
        <article id="<%= commande.id %>">
            <p> <%= commande.dateCreationCommande.toLocaleString() %></p>
            <p> <%= commande.commande %></p>
        
        
        <div>
            <% for(let dialogue of dialogues) { %>
                <div>
            
                    <p><%= dialogue.pseudo %></p>
                    <p><%= dialogue.dateDialogue %></p>
                    <p><%= dialogue.comment %></p>
                </div>
            <% } %>
        </div>
       
        <label for="commandeDialogueClient">Dialoguer avec l'artiste :</label>
                
        <textarea name="commandeDialogueClient" id="commandeDialogueClient"></textarea>
                
        <button class="js-dialogue-button"  data-transmitter="<%= locals.user.id %>" data-commande="<%= commande.id %>" data-client="<%= commande.idUser %>">Envoi</button>
        
        <button class="js-removeCommande-button" data-commande="<%= commande.id %>">Annuler la commande</button>
        <% if(commande.devis != 0) { %>
        
            <p><%= commande.devis %></p>
            <p><%= commande.prixCommande %></p>
            
        <% } %>

        
        </article>
        
    <% } %>

</section>
<section>
    <h3>Mes achats</h3>
    <% for(let produit of produits) { 
        if(produit.statut === "paye") { %>
        
        <article id="<%= produit.id %>">
            <p><%= produit.nom %></p>
            <p><%= produit.prix %></p>

        </article>
        <% }
    } %>
    
    <p>Prix total : <%= prixAchat %> </p>
    
    
    
</section>